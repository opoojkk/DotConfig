{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DotConfig",
  "version": "0.1.0",
  "identifier": "com.example.gitconfigstudio",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "capabilities": ["default"]
    },
    "windows": [
      {
        "label": "main",
        "title": "DotConfig",
        "width": 1200,
        "height": 750,
        "fullscreen": false,
        "decorations": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
